class Connect:
    def _init_(self):
        import nidaqmx as ni
        import time
        import numpy as np
        import matplotlib.pyplot as plt
        from lmfit import Model,Parameter
        from lmfit.models import LorentizanModel
        import pandas as pd
        import csv
        
        try:
            task1.close()
            task2.close()
            task3.close()
        except NameError:
            pass
            
        self.task1=ni.Task()
        self.task1.ao_channels.add_ao_voltage('Dev1/ao0','mychannel',-5,5) #output channel which controls piezo for laser
        self.task1.start()
        
        self.task2=ni.Task()
        self.task2.ao_channels.add_ao_voltage('Dev1/ao1','mychannel',-5,5) #output channel which controls oscilloscope triggering
        self.task2.start()
        
        self.task3=ni.Task()
        self.task3.ai_channels.add_ai_voltage('Dev1/ai0',max_val=6,min_val=-6) #input channel for photodetector
        self.task3.start()
